{
  "exclude": ["./tap-snapshots"],
  "include": ["test/**/*.ts"],
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "target": "ES6",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true
  }
}
